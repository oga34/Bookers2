<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container">
         <a class="navbar-brand" href="/">
           <span>Bookers</span>
         </a>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
           <% if user_signed_in? %>
            <li>
             <i class="fas fa-home fa-w-18" style="color: white;"></i>
             <%= link_to "Home", user_path(current_user.id), class: 'navlink text-light pr-3' %>
            </li>
            <li>
             <i class="fas fa-users fa-w-20" style="color: white;"></i>
             <%= link_to "Users", users_path, class: 'navlink text-light pr-3' %>
            </li>
            <li>
              <i class="fas fa-book-open" style="color: white;"></i>
              <%= link_to "Books", books_path,class: 'navlink text-light pr-3' %>
            </li>
            <li>
              <i class="fas fa-sign-out-alt fa-w-16 " style="color: white;"></i>
             <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'navlink text-light pr-3' %>
            </li>
           <% else %>
            <li>
             <i class="fas fa-home fa-w-18" style="color: white;"></i>
             <%= link_to "Home", "/", class: 'navlink text-light pr-3' %>
            </li>
            <li>
             <i class="fas fa-link fa-w-16" style="color: white;"></i>
             <%= link_to "About", about_path, class: 'navlink text-light pr-3' %>
            </li>
            <li>
             <i class="fas fa-user-plus fa-w-20" style="color: white;"></i>
             <%= link_to "Sign up", new_user_registration_path, class: 'navlink text-light pr-3' %>
            </li>
            <li>
             <i class="fas fa-sign-in-alt fa-w-16" style="color: white;"></i>
             <%= link_to "Log in", new_user_session_path, class: 'navlink text-light' %>
            </li>
           <% end %>
          </ul>
         </div>
        </div>
      </nav>
    </header>
    
    <main class="mb-auto">
    <%= render partial: 'layouts/flash_message' %> 
    <%= yield %>
    </main>
    
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
