<main>
    <p id="notice"></p>
        <div class="container">
            <div class="row">
                <div class="col-sm col-md col-lg-5 px-5 px-sm-o mx-auto">
                    <h2>User info</h2>
                     <% if @user.errors.any? %>
                      <%= @user.errors.count %>error prohibited this obj from being saved:
                      <ul>
                      <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                      <% end %>
                      </ul>
                     <% end %>
                    
                    <%= form_with model: @user do |f| %>
                     <div class="form-group">
                      <label for="inputName">Name</label></br>
                      <%= f.text_field :name, autofocus: true, id:"inputName", size: '50'%>
                     </div>
                     <div class="form-group">
                      <label for="inputImage">Image</label>
                      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
                     </div>
                     <div class="form-group">
                      <label for="inputIntroduction">Introduction</label></br>
                      <%= f.text_area :introduction, autofocus: true, id:"inputntroduction", size: '50'%>
                     </div>
                     <div class="form-group">
                      <%= f.submit "Update User", class: "btn btn-secondary" %>
                     </div>
                    <% end %>
                    
                        
                </div>
            </div>
        </div>
</main>